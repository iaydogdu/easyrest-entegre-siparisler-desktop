{
  "name": "easyrest-entegre-siparisler",
  "version": "1.0.11",
  "description": "EasyRest Entegre Siparişler Desktop Uygulaması",
  "author": "EasyRest",
  "main": "build/electron.js",
  "homepage": "./",
  "scripts": {
    "start": "set PORT=3002 && react-scripts start",
    "build": "set REACT_APP_VERSION=%npm_package_version% && react-scripts build",
    "build:electron": "npm run build && copy public\\electron.js build\\electron.js && copy public\\preload.js build\\preload.js && xcopy public\\assets build\\assets /E /I /Y",
    "electron": "npm run build:electron && electron .",
    "electron:dev": "concurrently \"npm start\" \"wait-on http://localhost:3002 && electron .\"",
    "electron:build": "echo 'Electron build completed'",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "release": "electron-builder --publish=always",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.easyrest.entegre-siparisler",
    "productName": "EasyRest Entegre Siparişler",
    "directories": {
      "output": "release"
    },
    "files": [
      "build/**/*",
      "public/electron.js",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "build/assets",
        "to": "assets"
      }
    ],
    "mac": {
      "category": "public.app-category.business",
      "target": "dmg"
    },
    "win": {
      "target": "nsis",
      "icon": "src/assets/icons/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "category": "Office"
    },
    "publish": {
      "provider": "github",
      "owner": "iaydogdu",
      "repo": "easyrest-entegre-siparisler-desktop"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "@angular/animations": "^17.0.0",
    "@angular/cdk": "^17.0.0",
    "@angular/common": "^17.0.0",
    "@angular/compiler": "^17.0.0",
    "@angular/core": "^17.0.0",
    "@angular/forms": "^17.0.0",
    "@angular/material": "^17.0.0",
    "@angular/platform-browser": "^17.0.0",
    "@angular/platform-browser-dynamic": "^17.0.0",
    "@angular/router": "^17.0.0",
    "@ng-select/ng-select": "^14.2.0",
    "@ngx-translate/core": "^15.0.0",
    "@ngx-translate/http-loader": "^8.0.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.19",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-scripts": "^5.0.1",
    "rxjs": "~7.8.0",
    "sweetalert2": "^11.7.0",
    "tailwindcss": "^4.1.13",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.0.0",
    "@angular/cli": "^17.0.0",
    "@angular/compiler-cli": "^17.0.0",
    "@types/node": "^18.19.127",
    "concurrently": "^8.2.2",
    "electron": "^27.0.0",
    "electron-builder": "^24.13.3",
    "electron-updater": "^6.6.2",
    "typescript": "~5.2.0",
    "wait-on": "^7.2.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
